<core:FragmentDefinition
	height="100%"
	xmlns="sap.m"
	xmlns:table="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:js="zuicostcnfg.js">
    <Dialog 
		contentWidth="40%"
        contentHeight="100%"
        title="Select Style Color"
        resizable="true"
        draggable="true"
        afterOpen="afterOpenCreateGMC"
		>
		<VBox fitContainer="true">
			<table:Table 
				id="ADDIOCOLORTab"
				enableColumnReordering="false" 
				class="stretchTable" 
				visibleRowCountMode="Auto" 
				selectionMode="MultiToggle" 
				selectionBehavior="RowSelector" 
				alternateRowColors="true">
				<table:extension>
					<Toolbar height="35px" class="sapUiTinyMarginBottom">
						<Title id="AddIOColorCnt" class="sapUiTinyMarginBegin"/>
						<ToolbarSpacer/>
						<ToolbarSeparator/>
						<Button id="btnADDIOCOLORApply" text="{i18n>Apply}" type="Ghost" icon="sap-icon://add" press="onAddFragment2" tooltip="{ddtext>/NEW}" visible="true" />
						<Button id="btnADDIOCOLORNew" type="Ghost" icon="sap-icon://add" press="onAddFragment" tooltip="{ddtext>/NEW}" visible="true">
						<customData>
                            <core:CustomData key="TableName" value="ADDIOCOLORTab" />
                        </customData> 
						</Button>
						<Button id="btnADDIOCOLORSubmit" text="{i18n>Submit}" press="onfragmentAddIOColor" tooltip="Submit" visible="false" />
						<Button id="btnADDIOCOLORCancel" text="{i18n>Cancel}" press="onCancelAddIOColor" tooltip="Cancel" visible="false" />
						<Button id="btnADDIOCOLORClose" text="{i18n>Close}" press="onCloseAddIOColor" tooltip="Close" visible="true" />    
						                        
					</Toolbar>
				</table:extension>	
				<table:layoutData>
					<FlexItemData growFactor="1" baseSize="0%"/>
				</table:layoutData>			
			</table:Table>
			<layoutData>
				<FlexItemData growFactor="1" />
			</layoutData>	
		</VBox>
	</Dialog>
</core:FragmentDefinition>